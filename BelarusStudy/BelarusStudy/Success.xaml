<Window x:Class="BelarusStudy.Success"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelarusStudy"
        mc:Ignorable="d"
        Title="Success" Height="500" Width="500">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" x:Name="img" Grid.ColumnSpan="2" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" x:Name="spText"
                   
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="text" Text="Ты ,маладчына!! Згодны?" FontSize="20"></TextBlock>

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" x:Name="spBtn"
                  
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button x:Name="btn" Click="btn_Click" Content="ТАК, ЗГОДНЫ" Padding="3"/>

        </StackPanel>


    </Grid>
</Window>
