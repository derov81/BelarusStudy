<Window x:Class="BelarusStudy.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelarusStudy"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="20" />
            
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="editGrid" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn   Width="90" />

                <DataGridTextColumn    Width="50" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <Button x:Name="btn1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="btn1_Click">SAVE</Button>
        </StackPanel>
        
    </Grid>
</Window>
